<style lang="scss">
ul.data-table {
  margin: 0;
  padding: 0;
  gap: 0;
  // sub: {
  //   margin-top: -4em;
  // }
  li {
    display: flex;
    font-size: .75rem;
    
    div.data-item {
      border-right: 1px solid rgb(179, 179, 179);
      // display: flex;
      padding: 5px;
      overflow-wrap: break-word;
      word-break: break-word;          
    }

    div.data-item:last-of-type {
      border-right: none;
    }    

    div.data-label {
      display: none;
      font-weight: bolder;
    }    

    &:nth-child(even) {
      background-color: rgba(183, 204, 183, 0.589);
    }  
    &:nth-child(odd) {
      background-color: rgb(241, 241, 226);
    }    
    &:first-child {
      font-size: .9rem;
      font-weight: bold;
      background-color: rgb(201, 201, 201);
      border-bottom: 1px solid rgb(202, 202, 202);
    }
  }

  .label {
    display: none;
   }

  @media (max-width: 725px) {
    li {
      display: block;
      padding: 7px;

      div.data-item {
        border-right: none;
        padding: 0;
      }  
      
      &:first-child {
        display: none;
      }

      > div:first-of-type {
        font-weight: bold;
        font-size: .925rem;
      }

    }
  }
}

.metric {
  width: 20rem;
}

.pseq {
  width: calc((100% - 20rem) * 3/16);
}

.short-read {
  width: calc((100% - 20rem) * 3/16);
}

.long-read {
  width: calc((100% - 20rem) * 2/16);
}

.notes {
  width: calc((100% - 20rem) * 8/16);
}

@media (max-width: 725px) {  
  .metric,
  .pseq, 
  .short-read,
  .long-read,
  .notes,
  .data-item {
    width: 100%;
    display: block;
  }

  .data-label {
    display: block;
    font-style: italic;
    width: 6rem;
    flex-shrink: 0;
  }

  .data-label::after {
    content: ": ";
    white-space: pre; /* or pre-line */
  }  

}
</style>


