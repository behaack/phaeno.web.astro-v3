---
interface IProps {
  href: string
  label: string,
  size?: 'sm' | 'md' | 'lg',
  target?: '_blank' | '_parent' | '_self' | '_top',
  rel?: string,
  ariaLabel?: string
}

const { href, label, size='md', target='_blank', rel='', ariaLabel='' } = Astro.props as IProps
---
<a
  class={size}
  href={href}
  target={target}
  aria-label={ariaLabel}
  rel={rel}  
  role="button"
>
  <span>{label}</span>
</a>

<style>
a {
  display: inline-flex;
  justify-content: center;
  background-color: #545458;
  color: white;
  text-decoration: none;
  border-radius: 7px;
  width: fit-content;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

a:hover {
  transform: scale(1.02);
  background-color: black;
  box-shadow: 0 4px 9px rgba(0, 0, 0, 0.2); /* Drop shadow */
}

a:active {
  box-shadow: none;
  transform: scale(1);
}

.sm {
  font-size: 12px;  
  padding: 5px 7px;  
}

.md {
  font-size: 15px;
  padding: 7px 9px;  
}

.lg {
  font-size: 18px;  
  padding: 8px 12px;
}
</style>