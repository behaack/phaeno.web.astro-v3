---
/**
 *  Standard page <head> tags (non-article).
 *  Usage:
 *    <SeoMeta slot="head" title="About Phaeno" description="â€¦" />
 */
import type { webtypes } from '@/assets/docTypes'
interface Props {
  title: string;
  description: string;
  documentType: webtypes;
  /** Absolute page URL (defaults to Astro.url) */
  url?: string;
  /** Social-card image (defaults to site-wide card) */
  image?: string;
  /** Twitter card type */
  twitterCard?: 'summary' | 'summary_large_image';
}

const {
  title,
  description,
  documentType,
  url = new URL(Astro.url.pathname, Astro.site).href,
  image = new URL('/images/phaeno-socialmedia-splash.webp', Astro.site).href,
  twitterCard = 'summary_large_image',
} = Astro.props as Props;
---

<title>{title}</title>
<meta name="description" content={description} />
<meta name="phaeno:document-type" content={documentType} />
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:type"        content="website" />
<meta property="og:site_name"   content="Phaeno" />
<meta property="og:url"         content={url} />
<meta property="og:title"       content={title} />
<meta property="og:description" content={description} />
<meta property="og:image"       content={image} />

<!-- Twitter -->
<meta name="twitter:card"        content={twitterCard} />
<meta name="twitter:site"        content="@Phaeno" />
<meta name="twitter:title"       content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image"       content={image} />
