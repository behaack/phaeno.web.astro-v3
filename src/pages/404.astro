---
import { Image } from 'astro:assets';
import SEOMeta from '@/components/meta-data-helpers/SEOMeta.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout>
  <SEOMeta 
    slot="head"
    title="404 - Page not found | Phaeno"
    description="Sorry, page not found."
    documentType="Web Page"
  />    
  <main>
    <section class="mt-5">
      <div class="background">
        <div class="circle small"></div>
        <div class="circle medium"></div>
        <div class="circle large"></div>
        <div class="circle small"></div>
        <div class="circle medium"></div>
        <div class="container">
          <h1 id="title">404</h1>
          <h2 class="flex justify-center items-center gap-5">
            <div>Page not found</div>
            <Image 
              width={50} 
              height={50} 
              alt="broken dna" 
              src="/images/404.webp" 
            />
          </h2>
          <p>Oops! The sequence you&apos;re looking for doesn&apos;t exist on this genome.</p>
          <a href="/" class="button" role="button">Home</a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
    }
    25% {
      transform: translateY(5px) translateX(-5px);
    }    
    50% {
      transform: translateY(-10px) translateX(5px);
    }
    50% {
      transform: translateY(2px) translateX(-5px);
    }    
  }

  main {
    background-color: #c2c2bf;
  }

  .container {
    pointer-events: auto;
    text-align: center;
    max-width: 480px;
    padding: 2rem;
    background: rgba(10, 25, 47, 0.85);
    border-radius: 12px;
    box-shadow: 0 0 40px rgba(0, 128, 255, 0.25);
  }

  h1 {
    font-size: 6.5rem;
    margin: 0;
    color: #789946;
    letter-spacing: 0.1em;
    animation: float 4s ease-in-out infinite;
  }

  h2 {
    margin: 0.5rem 0 1.5rem;
    font-weight: 400;
    color: #a1c7b4;
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #90a4ae;
  }

  a.button {
    text-decoration: none;
    padding: 0.75rem 2rem;
    background-color: #526832;
    color: rgba(240, 241, 238, 0.836);
    font-weight: 600;
    border-radius: 10px;
    transition: color background-color 0.3s ease;
    display: inline-block;
  }

  a.button:hover {
    background-color: #a4c96d;
    color: #496918;
  }

  /* Background molecule circles */
  .background {
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
    overflow: visible;
    height: 100%;
    width: 100%;
    position: relative; 
    overflow: hidden;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.15;
    animation: float 5s ease-in-out infinite;
    background-color: #789946;
  }

  .circle.small {
    width: 30px; height: 30px;
  }

  .circle.medium {
    width: 60px; height: 60px;
  }

  .circle.large {
    width: 70px; height: 70px;
  }

  .circle:nth-child(1) { top: 18%; left: 15%; animation-delay: 0s;}
  .circle:nth-child(2) { top: 20%; left: 70%; animation-delay: .5s;}
  .circle:nth-child(3) { top: 40%; left: 25%; animation-delay: .7s;}
  .circle:nth-child(4) { top: 60%; left: 80%; animation-delay: .8s;}
  .circle:nth-child(5) { top: 70%; left: 65%; animation-delay: 1s;}
</style>