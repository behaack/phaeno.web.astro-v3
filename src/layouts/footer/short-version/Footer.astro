<style>
footer {
  background-color: #E9EFEA;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  color: black;
}

.footer-container {
  padding: 10px;
  max-width: 85rem;
  width: 100%;
}

.column-header {
  font-weight: 700;
  text-transform: uppercase;
}

.top-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  gap: .5rem;
  font-size: 13px;
}

.top-container-item {
  display: flex;
  flex-direction: column;
  gap: .3rem;
  flex: 1 1 22%; /* 4 columns with space between */
  min-width: 180px; /* prevents squishing on smaller screens */
  max-width: 225px;
  padding: 10px;
  text-align: center;
}

.bottom-container {
  display: flex;
  justify-content: center;
  padding: 3px;
  font-size: 10px;
}

@media (max-width:  600px) {
  .top-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: .5rem;
    font-size: 13px;
    width: 100%;
  }
}
</style>